<Window x:Class="login_sever.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:login_sever"
        mc:Ignorable="d"
        Title="LoginScreen" Height="300" Width="300" FontSize="14" Background="#04c582">
    <Border Background="Black" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Label Content="Username" Foreground="white"/>
            <TextBox Name="txtUsername" Background="Gray" Foreground="White" FontSize="14" AcceptsReturn="True"/>
            <Label Content="Password" Foreground="white"/>
            <TextBox Name="txtPassword" Background="Gray" Foreground="White" FontSize="14" AcceptsReturn="True"/>
            <Button Name="btnSubmit" Content="Submit" Foreground="White" Width="60" Margin="10" Click="BtnSubmit_Click"/>
        </StackPanel>
    </Border>
</Window>
